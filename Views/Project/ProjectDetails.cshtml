@using TeamUpSpace.Models;
@model ProjectModel

@if (Model is null)
{
    ViewData["Title"] = "Пока что у вас нет проекта";
    <h1>Пока что у вас нет проекта</h1>
}
else
{
    ViewData["Title"] = "Мой проект";
    <div class="row">
        <div class="col">
            <div class="card p-4" style="width: 100%;">
                <div class="card-body">
                    <h5 class="card-title">@Model.ProjectName</h5>
                    <p class="">
                        <span>@Model.Description</span>
                    </p>
                </div>
            </div>
            <div>


                <br>
                <span>@Model.Category</span>

                <div class="d-flex">
                    <form method="post">
                        <input type="hidden" value="true" name="Regenerate">
                        <button type="submit" class="btn btn-primary me-2">Создать описание</button>
                    </form>

                    <a class="btn btn-secondary">Управление</a>
                    <br>
                </div>

            </div>
        </div>
        <div class="col">
            <h1>Кто в проетке?</h1>
            @foreach (var item in Model.Users)
            {
                <p>@item.Email</p>
            }
        </div>

    </div>
    <div>
        <a asp-controller="Home" asp-action="Index">Назад</a>
    </div>
}